{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 450,
    "height": 300,
    "data": {
        "url": "https://raw.githubusercontent.com/PGrinEk/FIT3179/refs/heads/main/Assignment2/Data/VisaTypeOverTime.csv"
    },
    "transform": [
        {
          "filter": {
            "selection": "Visa Type"
          }
        }
    ],
    "layer":[
        {
            "mark": "area",
            "params":[
                {
                  "name": "Visa Type",
                  "select": {"type": "point", "fields": ["Visa"]},
                  "bind": "legend"
                }
              ],
            "encoding": {
                "x": {
                    "field": "Year",
                    "type": "temporal",
                    "axis": {"labelAngle": 0},
                    "title": "Year"
                },
                "y": {
                    "aggregate": "sum",
                    "field": "Total",
                    "type": "quantitative",
                    "title": "Total Migrants",
                    "axis": {
                        "grid": false,
                        "tickCount": 10
                    }
                },
                "color": {
                    "field": "Visa",
                    "type": "nominal",
                    "scale": {
                        "domain": ["Skilled", "Family", "Humanitarian"],
                        "range": ["#99d8c9", "#41ae76", "#238b45"]
                    },
                    "title": "Visa Types"
                },
                "tooltip": [
                    {"field": "Visa", "type": "nominal", "title": "Visa Type"},
                    {"field": "Year", "type": "temporal", "title": "Year", "format": "%Y"},
                    {"field": "Total", "type": "quantitative", "title": "Migrants in Visa Type", "format": ",.0f"},
                    {"field": "Count", "type": "quantitative", "title": "Total Migrants in Year", "format": ",.0f"}
                ]
            },
            "config": {
                "area": {
                    "interpolate": "natural",
                    "opacity": 0.9
                }
            }
        },
        {
            "mark": {
                "type": "text",
                "fontSize": 14
            },
            "encoding": {
                "text": {
                  "value": "2008 GFC -> Downturn in Immigration"
                },
                "x": {
                  "value": 310
                },
                "y":{
                    "value": 270
                }
            }
        },
        {
            "mark": {
                "type": "rule",
                "color": "black",
                "strokeDash": [4, 4]
            },
            "encoding": {
                "x": {
                    "value": 180
                },
                "y": {
                    "aggregate": "min",
                    "field": "Total"
                },
                "y2": {
                    "value": 0
                }
            }
        }

    ]
    
}