{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 1000,
    "height": 500,
    "data": {
      "url": "https://raw.githubusercontent.com/PGrinEk/FIT3179/refs/heads/main/Assignment2/JS/new_SA3_2021_AUST_GDA94.json",
      "format": {"type": "topojson", "feature": "SA3_2021_AUST_GDA94"}
    },
    "params": [
      {
        "name": "zoom_level",
        "value": 800,
        "bind": {
          "input": "range",
          "min": 800,
          "max": 60000,
          "step": 100,
          "name": "Zoom: "
        }
      },
      {
        "name": "center_to",
        "value": [132.08, -27],
        "bind": {
          "input": "select",
          "options": [
            [132.08, -23.07],
            [145, -37.95],
            [151.2093, -33.8688],
            [153.0260, -27.4705],
            [149.1310, -35.2802],
            [138.6007, -34.9285],
            [115.8617, -31.9514],
            [130.8444, -12.4637],
            [147.3257, -42.8826]
          ],
          "labels": ["Center of Australia", "Melbourne", "Sydney", "Brisbane", "Canberra", "Adelaide", "Perth", "Darwin", "Hobart"],
          "name": "Map Centre: "
        }
      }
    ],
    "projection": {
      "type": "equirectangular",
      "center": {"expr": "center_to"},
      "scale": {"expr": "zoom_level"}
    },
    "transform": [
      {
        "lookup": "properties.SA3_NAME21",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/PGrinEk/FIT3179/main/Assignment2/Data/SA3%20Table.csv"
          },
          "key": "SA3 Names",
          "fields": ["popPer10k"]
        }
      },
      {"calculate": "datum.popPer10k", "as": "Migrants per 10,000 Population"}
    ],
    "layer": [
      {
        "mark": {"type": "geoshape"},
        "encoding": {
          "color": {
            "field": "Migrants per 10,000 Population",
            "type": "quantitative",
            "scale": {
              "type": "threshold",
              "domain": [400, 800, 1200, 1600, 2000],
              "range": ["#ccece6", "#99d8c9", "#66c2a4", "#41ae76", "#238b45", "#00441b"]
            }
          },
          "tooltip": [
            {"field": "properties.SA3_NAME21", "type": "nominal", "title": "Area"},
            {"field": "popPer10k", "type": "quantitative", "title": "Migrants per 10k"}
          ]
        }
      },
      {
        "mark": {
          "type": "geoshape",
          "stroke": "black", 
          "strokeWidth": 0.1 
        },
        "encoding": {
          "color": {
            "value": "transparent" 
          },
          "tooltip": [
            {"field": "properties.SA3_NAME21", "type": "nominal", "title": "Area"},
            {"field": "popPer10k", "type": "quantitative", "title": "Migrants per 10k"}
          ]
        }
      }
    ]
}